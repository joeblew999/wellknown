{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "E2E Test Configuration",
  "description": "Defines all pages and forms to test automatically",
  "pages": [
    {
      "name": "GCP OAuth Setup Wizard",
      "url": "/tools/gcp/setup",
      "htmlTemplate": "../../pkg/server/templates/gcp_tool.html",
      "schema": null,
      "uiSchema": null,
      "type": "custom_html",
      "features": [
        "Step-by-step wizard",
        "Form validation",
        "State persistence (.env file)",
        "Toast notifications"
      ],
      "testFile": "e2e/gcp-wizard.spec.ts"
    },
    {
      "name": "Google Calendar Event Form",
      "url": "/google/calendar",
      "htmlTemplate": "../../pkg/server/templates/schema_form.html",
      "schema": "../../pkg/google/calendar/schema.json",
      "uiSchema": "../../pkg/google/calendar/uischema.json",
      "type": "json_schema_form",
      "features": [
        "JSON Schema validation",
        "UI Schema for layout",
        "Form generation from schema",
        "Deep link generation"
      ],
      "testFile": "e2e/google-calendar.spec.ts"
    },
    {
      "name": "Apple Calendar Event Form",
      "url": "/apple/calendar",
      "htmlTemplate": "../../pkg/server/templates/schema_form.html",
      "schema": "../../pkg/apple/calendar/schema.json",
      "uiSchema": "../../pkg/apple/calendar/uischema.json",
      "type": "json_schema_form",
      "features": [
        "JSON Schema validation",
        "UI Schema for layout",
        "Form generation from schema",
        "ICS file generation"
      ],
      "testFile": "e2e/apple-calendar.spec.ts"
    }
  ],
  "automation": {
    "generateHelpers": true,
    "generateTests": true,
    "validateSchemas": true,
    "checkDataTestIds": true
  }
}
