# ================================================================
# Wellknown Environment Variables
# ================================================================
# This file is auto-generated from pkg/pb/env.go
# Copy this to .env and configure for your environment
# ================================================================

# ----------------------------------------------------------------
# AI
# ----------------------------------------------------------------
# Use Anthropic OAuth (NOT IMPLEMENTED YET, keep false)
AI_USE_OAUTH=false

# Anthropic Claude API key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=

# Claude model name
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# ----------------------------------------------------------------
# Apple OAuth
# ----------------------------------------------------------------
# Apple OAuth client ID (Service ID)
APPLE_CLIENT_ID=

# Apple private key ID
APPLE_KEY_ID=

# Apple private key (inline PEM content)
APPLE_PRIVATE_KEY=

# Path to Apple private key file (alternative to inline)
APPLE_PRIVATE_KEY_PATH=

# Apple OAuth callback URL
APPLE_REDIRECT_URL=

# Apple Developer Team ID
APPLE_TEAM_ID=

# ----------------------------------------------------------------
# Binary Update
# ----------------------------------------------------------------
# Local directory for binary updates when UPDATE_SOURCE=local
UPDATE_LOCAL_DIR=.dist

# Update source: 'github' for production or 'local' for testing
UPDATE_SOURCE=github

# ----------------------------------------------------------------
# Deployment
# ----------------------------------------------------------------
# Application URL (for production deployments)
APP_URL=

# Set to true if behind a reverse proxy
BEHIND_PROXY=false

# ----------------------------------------------------------------
# Google OAuth
# ----------------------------------------------------------------
# Google OAuth client ID
# REQUIRED
GOOGLE_CLIENT_ID=

# Google OAuth client secret
# REQUIRED
GOOGLE_CLIENT_SECRET=

# Google OAuth callback URL
# REQUIRED
GOOGLE_REDIRECT_URL=

# ----------------------------------------------------------------
# HTTPS (Development)
# ----------------------------------------------------------------
# Path to SSL certificate file
CERT_FILE=.data/certs/cert.pem

# Enable HTTPS with custom certificates (development only, use mkcert)
HTTPS_ENABLED=false

# HTTPS port (development only)
HTTPS_PORT=8443

# Path to SSL private key file
KEY_FILE=.data/certs/key.pem

# ----------------------------------------------------------------
# PocketBase Admin
# ----------------------------------------------------------------
# PocketBase admin email
PB_ADMIN_EMAIL=

# PocketBase admin password
PB_ADMIN_PASSWORD=

# ----------------------------------------------------------------
# S3
# ----------------------------------------------------------------
# S3 access key
S3_ACCESS_KEY=

# S3 bucket for PocketBase backups
S3_BACKUP_BUCKET=

# S3 bucket name
S3_BUCKET=

# S3 endpoint URL
S3_ENDPOINT=

# S3 path style (true/false)
S3_FORCE_PATH_STYLE=

# S3 region
S3_REGION=us-east-1

# S3 secret key
S3_SECRET_KEY=

# ----------------------------------------------------------------
# SMTP
# ----------------------------------------------------------------
# From email address
SMTP_FROM_EMAIL=

# From name
SMTP_FROM_NAME=

# SMTP server hostname
SMTP_HOST=

# SMTP password
SMTP_PASSWORD=

# SMTP server port
SMTP_PORT=587

# SMTP username
SMTP_USERNAME=

# ----------------------------------------------------------------
# Server
# ----------------------------------------------------------------
# PocketBase data directory
PB_DATA_DIR=.data/pb

# Server bind address (currently used for logging only - actual bind controlled by --http/--https flags)
SERVER_HOST=127.0.0.1

# Server port
SERVER_PORT=8090

